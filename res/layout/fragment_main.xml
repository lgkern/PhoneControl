<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uooooou"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAlignment="center"
    tools:context="com.example.phonecontrol.MainActivity$PlaceholderFragment" >



    <Button
        android:id="@+id/Button03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Button02"
        android:layout_below="@+id/Button02"
        android:layout_marginTop="30dp"
        android:background="@drawable/uooooou"
        android:text="HELP           "
        android:textColor="#535354"
        android:textSize="27sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01"
        android:layout_below="@+id/Button01"
        android:layout_marginTop="27dp"
        android:background="@drawable/uooooou"
        android:text="ABOUT        "
        android:textColor="#535354"
        android:textSize="27sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="26dp"
        android:background="@drawable/uooooou"
        android:text="CONTROLS"
        android:textColor="#535354"
        android:textSize="27sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginRight="38dp"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="@drawable/uooooou"
        android:text="STATUS      "
        android:textColor="#535354"
        android:textSize="27sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:scaleType="matrix"
        android:src="@drawable/phone_control_logo" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/button1" />

</RelativeLayout>
